{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [ "DOM", "ESNext" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["./src/js/**/*.ts"]
}
